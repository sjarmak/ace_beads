{
  "name": "ace-beads-amp",
  "version": "0.1.0",
  "description": "ACE framework implementation using Amp subagents and Beads",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ace": "dist/src/cli.js",
    "ace-mcp-server": "dist/mcp/server.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:cli": "bun build src/cli.ts --compile --outfile dist/ace",
    "build:binaries": "./scripts/build-binaries.sh",
    "test": "vitest --run",
    "posttest": "node scripts/posttest-hook.js",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "cli": "node dist/src/cli.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ace",
    "beads",
    "amp",
    "agentic",
    "context-engineering",
    "ai-agent",
    "self-improving",
    "coding-agent",
    "mcp",
    "mcp-server",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjarmak/ace_beads.git"
  },
  "homepage": "https://github.com/sjarmak/ace_beads#readme",
  "bugs": {
    "url": "https://github.com/sjarmak/ace_beads/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/js-yaml": "^4.0.9",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.0"
  }
}
